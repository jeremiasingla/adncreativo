{
  "name": "brand-saas",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm:dev --workspace backend\" \"npm:dev --workspace frontend\"",
    "build": "npm --workspace backend run build || true && npm --workspace frontend run build",
    "start": "npm --workspace backend run start",
    "dev:stop": "pkill -f 'node|vite|nodemon' || true"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
